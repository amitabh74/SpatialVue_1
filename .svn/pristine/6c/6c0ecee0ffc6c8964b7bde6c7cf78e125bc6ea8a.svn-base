<form class="cmxform" id="roleForm" action="" onsubmit="return false;">

<div class="topmenu">
<a id="role_btnNew" class="btn02" onclick="javascript:createEditRole();"><span class="NewBTN">New</span></a>
<a id="role_btnSave" class="btn02" onclick="javascript:saveRole();"><span class="saveBTN">Save</span></a>
<a id="role_btnBack" class="btn02" onclick="javascript:displayRole();"><span class="BackBTN">Back</span></a>
</div>

	<table id="roleTable"  class="tablesorter" cellpadding="0" cellspacing="0">
	<thead>
        
        <tr>
            <td colspan="4" class="project_cellpadtwo">
			
			<table width="100%" cellpadding="0" cellspacing="0" class="project_table_adjust">
                	<tr>
                    	<td class="project_cell_adjust styleForm">
						<label class="searchLbl">Search:</label>&nbsp;
						<input id="role_txtSearch" value="" maxlength="30" size="30" type="text" />
						</td>
                       </tr>
                </table>
			
			
			
			
			
            </td>
        </tr>
        
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th> 
            <th class="blanCell">&nbsp;</th>
			<th class="blanCell">&nbsp;</th>
			
        </tr>
    </thead>
    <tbody id="RolesRowData">
        
    </tbody>
    
    <tfoot>

	    <tr class="tblFooter" id="role_pagerDiv" class="tblFooter">
	        <td colspan="4">
            	<table cellpadding="1" cellspacing="1"  class="cell_margin">
                	<tr>
                    	<td width="100%" class="cell_color">
                        	<table cellpadding="1" cellspacing="1" class="table_adjust">
                            	<tr>
                                	<td class="cell_adjust" >
                                    	 <img src="resources/scripts/tablesorter/addons/pager/icons/first.png" class="first" title="First" />
                                    </td>
                                    <td class="cell_adjust" >
                                    	 <img src="resources/scripts/tablesorter/addons/pager/icons/prev.png" class="prev" title="Previous" />
                                    </td>
                                      <td class="cell_adjustone">
                                     	 <input type="text" class="pagedisplay" readonly="readonly"/>
                                     </td>
                                    <td class="cell_adjust" >
                                     	 <img src="resources/scripts/tablesorter/addons/pager/icons/next.png" class="next" title="Next" />
                                     </td>
                                     <td class="cell_adjust" >
                                      	 <img src="resources/scripts/tablesorter/addons/pager/icons/last.png" class="last" title="Last" />
                                      </td>
                                      <td class="cell_adjustone">
                                      	 <select class="pagesize">
                                            <option selected="selected"  value="10">10</option>
                                            <option value="20">20</option>                                            
                                        </select>
                                      </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </td>
	    </tr>
	</tfoot>
    
    
    </table>
 
 
	 <div id="role_accordion">
		<h3><a href="#">General</a></h3>
		<div style="height:250px">   
	    <table id="roleDetails" >
			<tbody id="roleDetailBody">
        		
    		</tbody>
		</table>	
	</div>

<h3><a href="#">Assign Module</a></h3>
	<div style="height:250px" id="assign_module_table">	
	<table>
	<tbody>	
		<tr>
		<td>
				<a id="all" href="#" style="color: #1491FF;text-decoration: none;" onclick="javascript:toggleModuleChecked(true);">Select All</a>
				&nbsp;&nbsp;
				<a id="none" href="#" style="color: #1491FF;text-decoration: none;" onclick="javascript:toggleModuleChecked(false);">Deselect All</a>
		</td>
		
		</tr>	
		
		
	</tbody>
	<tbody id="roleModuleList">
	
	</tbody>
	</table>
	</div>
</div>


<script  id="RoleTemplateModule" type="text/x-jquery-tmpl">

		{{each(m,module) $item.moduleList}}   
		<tr>		
			<td>
				<input type="checkbox" id="${module.name}" name="role_module" value="${module.name}" class='moduleCheckbox' onchange="toggleModule(this);" /> ${module.name}
			</td>
			
			<td colspan="4" id="TD_${module.name}">	
				
				<input type="hidden" id="${module.name}_Default" name="${module.name}_action"  value="Default" class='moduleActionCheckbox' />					
				
				<!--
				{{each(i,action) $item.actionList}}                                 
				<input type="checkbox" id="${module.name}_${action.name}" name="${module.name}_action"  value="Default" class='moduleActionCheckbox' /> Default					
				
				
				{{/each}}   -->        

			</td>
			
			
		</tr>
			
 		{{/each}}    
 
</script>


<script id="RoleTemplate" type="text/x-jquery-tmpl">
        <tr>
            <td>
                ${name}
            </td>           
            <td>
                ${description}
            </td>  
			
			<td align="center">
				<a href="javascript:createEditRole('${name}');"><img src="resources/images/studio/edit.png" title="Edit" /></a>
            </td>
           <td align="center">
				<a href="javascript:deleteRole('${name}');"><img src="resources/images/studio/delete.png" title="Delete" /></a>
           </td>	
			                     
        </tr>
        </script>

<script id="RoleTemplateForm" type="text/x-jquery-tmpl">        
 <tr>
 <td>Name</td>
 <td>
    <input type="textbox" name="name" id="name" value="${name}" />    	
    </td>  

<td>Description</td>
 <td><input type="textbox" name="description"  id="description" value="${description}"/></td>

 </tr>
 
 </script>


</form>

</div>